<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.yobo_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/yobo"
        android:label="YOBO"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".activity.MyPageActivity"/>
        <activity android:name=".activity.BoardActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.TestActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/Full">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RecipeFormActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.CategorySearchActivity" />
        <activity android:name=".activity.MyRecipeListActivity" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.CommentActivity" />
        <activity android:name=".activity.ChoiceIngredientActivity" />
        <activity android:name=".activity.RecipeMainActivity" />
        <activity android:name=".activity.ShowDetailedShopLogActivity"/>
        <activity android:name=".activity.RecipeActivity" />
        <activity android:name=".activity.NaverLoginActivity" />
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.ShowShopLogActivity"/>
        <activity android:name=".activity.ShowSelectedIngredientInfoActivity" />
        <activity android:name=".activity.ShopIngredientActivity" />
        <activity android:name=".activity.BasketActivity" />
    </application>

</manifest>