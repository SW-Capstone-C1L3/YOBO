<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recipeSequenceFormImage"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10sp"
            android:src="@drawable/ic_add_a_photo_24dp"
            android:background="@drawable/imageview_shape"/>

        <EditText
            android:id="@+id/recipeSequenceFormText"
            android:layout_width="match_parent"
            android:layout_height="130sp"
            android:background="@null"
            android:gravity="start"
            android:hint="요리 방법을 입력해주세요 ^_^"
            android:inputType="textMultiLine"
            android:paddingLeft="10sp"
            android:paddingTop="10sp" />
    </LinearLayout>

    <View style="@style/ListDividerHorizontal"/>
</LinearLayout>