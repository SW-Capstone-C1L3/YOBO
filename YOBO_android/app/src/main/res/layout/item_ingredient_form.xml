<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ingredientBookImage"
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_ingredient_book" />

        <EditText
            android:id="@+id/ingredientNameText"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="1.1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="재료 이름"
            android:paddingLeft="20sp"
            android:singleLine="true" />

        <View style="@style/ListDividerVertical"/>

        <EditText
            android:id="@+id/ingredientQuantityText"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="양을 입력해주세요!"
            android:paddingLeft="10sp"
            android:singleLine="true" />

    </LinearLayout>
    <View style="@style/ListDividerHorizontal"/>
</LinearLayout>
