<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_enroll_recipe"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageButton
                android:id="@+id/menuImageButton"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@android:color/transparent"
                android:contentDescription="TODO"
                android:src="@drawable/ic_menu" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="YOBO"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/ScrollView1"
            android:orientation="vertical"
            android:fillViewport="true"
            android:layout_marginTop="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pagerMain"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_margin="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/btnRecipeCategory"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="3dp"
                            android:orientation="vertical"
                            android:background="@drawable/btn111"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/main_btncategory"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="카테고리"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnShop"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="3dp"
                            android:orientation="vertical"
                            android:background="@drawable/btn33"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/main_btnmarket"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="마켓"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/btnChoiceIngredient"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="3dp"
                            android:orientation="vertical"
                            android:background="@drawable/btn222"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/main_btnchoice"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="재료선택"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnWriteRecipe"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_margin="3dp"
                            android:orientation="vertical"
                            android:background="@drawable/btn44"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/main_btnnote"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="레시피등록"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        app:paddingStart="@dimen/space16"
        app:itemTextColor="@color/colorPrimary"
        app:itemTextAppearance="@style/MenuItem"/>

</androidx.drawerlayout.widget.DrawerLayout>
